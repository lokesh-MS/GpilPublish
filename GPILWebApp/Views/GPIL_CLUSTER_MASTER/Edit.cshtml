@model GPILWebApp.Models.GPIL_CLUSTER_MASTER

@{
    ViewBag.Root = "Master";
    ViewBag.Title = "CLUSTER EDIT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; color:#438EB9">Cluster Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        @Html.HiddenFor(model => model.CLUSTER_CODE)


        @Html.HiddenFor(model => model.CREATED_BY)
        @Html.HiddenFor(model => model.CREATED_DATE)



        <div class="row">
            <div class="col-sm-6">
                <div class="sm-3">


                    <label class="control-label">Cluster Name </label>

                    @Html.EditorFor(model => model.CLUSTER_NAME, new { htmlAttributes = new { @class = "form-control", id = "txtItemCode", minlength = "5", maxlength = "25" } })
                    @Html.ValidationMessageFor(model => model.CLUSTER_NAME, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-sm-6">
                <div class="sm-3">
                    <label class="control-label">Status </label>

                    @Html.DropDownListFor(model => model.STATUS, new List<SelectListItem> {
                    new SelectListItem {Text="Y" ,Value="Y" },
                    new SelectListItem {Text="N" ,Value="N" }
               }, "SELECT STATUS", new { @class = "form-control", @id = "ddlStatus" })
                    @Html.ValidationMessageFor(model => model.STATUS, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="sm-3">


                    <br />

                    <input type="submit" value="Save" style="width:95px" class="btn btn-success btn-sm" />
                </div>
            </div>
            <div class="col-sm-6">
                <p id="notify" style="display:none"> @TempData["SuccessMessage"]</p>

            </div>
            @*<div class="col-sm-6">
                    <div class="sm-3">
                        <label class="control-label"></label>


                    </div>
                </div>*@


            <div class="col-sm-6">
                <p id="notify" style="display:none"> @TempData["SuccessMessage"]</p>
            </div>
        </div>

    </div>
}

