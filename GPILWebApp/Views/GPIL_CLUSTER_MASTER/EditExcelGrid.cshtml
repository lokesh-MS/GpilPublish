@model GPILWebApp.Models.GPIL_CLUSTER_MASTER

@{
    ViewBag.Title = "EditExcelGrid";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditExcelGrid</h2>




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>GPIL_CLUSTER_MASTER</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        @Html.HiddenFor(model => model.CLUSTER_CODE)


        @Html.HiddenFor(model => model.CREATED_BY)
        @Html.HiddenFor(model => model.CREATED_DATE)



        <div class="row">
            <div class="col-sm-6">
                <div class="sm-3">


                    <label class="control-label">Cluster Name </label>

                    @Html.EditorFor(model => model.CLUSTER_NAME, new { htmlAttributes = new { @class = "form-control", id = "txtItemCode" } })
                    @Html.ValidationMessageFor(model => model.CLUSTER_NAME, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-sm-6">
                <div class="sm-3">
                    <label class="control-label">Status </label>

                    @Html.DropDownListFor(model => model.STATUS, new List<SelectListItem> {
                    new SelectListItem {Text="Y" ,Value="Y" },
                    new SelectListItem {Text="N" ,Value="N" }
               }, "SELECT STATUS", new { @class = "form-control", @id = "ddlStatus" })
                    @Html.ValidationMessageFor(model => model.STATUS, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="sm-3">


                    <br />

                    <input type="submit" value="Save" style="width:95px" class="btn btn-success btn-sm" />
                </div>
            </div>

            <div class="col-sm-6">
                <div class="sm-3">
                    <label class="control-label"></label>


                </div>
            </div>
        </div>

    </div>
}





<div>
    @Html.ActionLink("Back to List", "Index")
</div>
