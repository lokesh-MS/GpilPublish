@model IEnumerable<GPILWebApp.ViewModel.DataLoader.GradingOutturnLoader>
@{
    ViewBag.Root = "Loader";
    ViewBag.Title = "GradingOutturnLoaderIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="css/custom.css" rel="stylesheet" />
<style type="text/css">
