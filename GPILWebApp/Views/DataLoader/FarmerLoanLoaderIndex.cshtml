@model IEnumerable<GPILWebApp.ViewModel.DataLoader.FarmerLoanLoader>
@{
    ViewBag.Root = "Loader";
    ViewBag.Title = "FarmerLoanLoaderIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="css/custom.css" rel="stylesheet" />
<style type="text/css">
