@model GPILWebApp.Models.GPIL_OPERATION_RECIPE

@{
    ViewBag.Root = "Master";
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; color:#438EB9">Operation Recipe Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.RECIPE_CODE)
        @Html.HiddenFor(model => model.CREATED_BY)
        @Html.HiddenFor(model => model.CREATED_DATE)



        <div class="row">
            @*<div class="col-sm-6">
                    <div class="sm-3">


                        <label class="control-label">*Recipe Code </label>

                        @Html.EditorFor(model => model.RECIPE_CODE, new { htmlAttributes = new { @class = "form-control", id = "txtRecipeCode", minlength = "3", maxlength = "30", @onchange = "UserIDCheck();", oninput = "javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" } })
                        @Html.ValidationMessageFor(model => model.RECIPE_CODE, "", new { @class = "text-danger" })
                    </div>
                </div>*@

            <div class="col-sm-6">
                <div class="sm-3">


                    <label class="control-label">*Operation Recipe  </label>

                    @Html.EditorFor(model => model.OPERATION_RECIPE, new { htmlAttributes = new { @class = "form-control", id = "txtOperationRecipe", minlength = "3", maxlength = "30" } })
                    @Html.ValidationMessageFor(model => model.OPERATION_RECIPE, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="sm-3">


                    <label class="control-label">Status </label>

                    @Html.DropDownListFor(model => model.STATUS, new List<SelectListItem> {
                    new SelectListItem {Text="Y" ,Value="Y" },
                    new SelectListItem {Text="N" ,Value="N" }
               }, "SELECT STATUS", new { @class = "form-control", @id = "ddlStatus" })
                    @Html.ValidationMessageFor(model => model.STATUS, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div class="row">


        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="sm-3">


                    <label class="control-label"></label>

                    <br />

                    <input type="submit" value="Save" style="width:95px" class="btn btn-success btn-sm" />
                </div>
            </div>

            <div class="col-sm-6">
                <p id="notify" style="display:none"> @TempData["SuccessMessage"]</p>

            </div>
        </div>


    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script src="~/assets/js/jquery-2.1.4.min.js"></script>
<script src="~/assets/js/sweetalert.min.js"></script>
<link href="~/assets/css/sweetalert.css" rel="stylesheet" />
<script>

    var mes = document.getElementById("notify").innerHTML
    if (mes.startsWith("Success", 1)) {
        sweetAlert("Done", mes, "success");
        setTimeout(function () {
            window.location = "/GPIL_OPERATION_RECIPE/Index";
        }, 2000)
    }

</script>