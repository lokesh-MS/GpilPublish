
@{
    ViewBag.Root = "LD";
    ViewBag.Title = "FarmerPurchaseSummaryDetailsIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="css/custom.css" rel="stylesheet" />
<style type="text/css">
