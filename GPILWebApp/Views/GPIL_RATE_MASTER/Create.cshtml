@model GPILWebApp.Models.GPIL_RATE_MASTER

@{
    ViewBag.Root = "Master";
    ViewBag.Title = "Rate Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 style="text-align:center; color:#438EB9">Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>GPIL_RATE_MASTER</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



    <div class="row">
        <div class="col-sm-6">
            <div class="sm-3">

                <label class="control-label">*Location Code</label>
                <div>
                    @*@Html.DropDownList("Loc_Code", new SelectList(ViewBag.GPIL_ORGN_MASTER, "ORGN_CODE", "ORGN_CODE1"), "Please select", new { @class = "form-control" })*@

                    @Html.DropDownListFor(model => model.Loc_Code, new SelectList(ViewBag.GPIL_ORGN_MASTER, "ORGN_CODE", "ORGN_CODE1"), "SELECT LOC_CODE ", new { @class = "form-control", @id = "ddlORGN_CODE" })
                    @Html.ValidationMessageFor(model => model.Loc_Code, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="sm-3">
                <label class="control-label">*Item Code </label>

                @Html.EditorFor(model => model.Item_Code, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Item_Code, "", new { @class = "text-danger" })
            </div>
        </div>


    </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="sm-3">


                    <label class="control-label">*Rate </label>

                    @Html.EditorFor(model => model.Rate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="sm-3">

                </div>
            </div>
            @*<div class="col-sm-6">
                    <div class="sm-3">
                        <br />
                        <input type="submit" value="Create" style="width:95px" class="btn btn-success btn-sm" />

                        <input type="button" id="btnView" value="View" style="width:95px" onclick=@("window.location.href='" + @Url.Action("Index", "GPIL_RATE_MASTER") + "'") ; class="btn btn-primary btn-sm" />

                    </div>
                </div>*@
        </div>


        <div class="row">

            <div class="col-sm-6">
                <div class="sm-3">
                    <br />
                    <input type="submit" value="Create" style="width:95px" class="btn btn-success btn-sm" />

                    <input type="button" id="btnView" value="View" style="width:95px" onclick=@("window.location.href='" + @Url.Action("Index", "GPIL_RATE_MASTER") + "'") ; class="btn btn-primary btn-sm" />

                </div>
            </div>
            <div class="col-sm-6">
                <p id="notify" style="display:none"> @TempData["SuccessMessage"]</p>

            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script src="~/assets/js/jquery-2.1.4.min.js"></script>
<script src="~/assets/js/sweetalert.min.js"></script>
<link href="~/assets/css/sweetalert.css" rel="stylesheet" />
<script>

    var mes = document.getElementById("notify").innerHTML
    if (mes.startsWith("Success", 1)) {
        sweetAlert("Done", mes, "success");
        setTimeout(function () {
            window.location = '/GPIL_RATE_MASTER/Index';
        }, 2000)
    }

</script>