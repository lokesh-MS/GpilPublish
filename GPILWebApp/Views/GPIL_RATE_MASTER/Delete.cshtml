@model GPILWebApp.Models.GPIL_RATE_MASTER

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; color:#438EB9">Rate Delete</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Loc_Code)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Loc_Code)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Item_Code)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item_Code)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Last_Updated_Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Last_Updated_Date)
        </dd>
        <div class="col-sm-6">
            <p id="notify" style="display:none"> @TempData["SuccessMessage"]</p>

        </div>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <h3>Are you sure you want to delete this?</h3>
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>


<script src="~/assets/js/jquery-2.1.4.min.js"></script>
<script src="~/assets/js/sweetalert.min.js"></script>
<link href="~/assets/css/sweetalert.css" rel="stylesheet" />
<script>

    var mes = document.getElementById("notify").innerHTML
    if (mes.startsWith("Success", 1)) {
        sweetAlert("Done", mes, "success");
        setTimeout(function () {
            window.location = '/GPIL_RATE_MASTER/Index';
        }, 2000)
    }

</script>

