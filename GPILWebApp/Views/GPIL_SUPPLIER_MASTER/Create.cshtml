                    <label class="control-label">Supplier / Supplier Address7 </label>
                    @Html.EditorFor(model => model.SUPP_ADDRESS7, new { htmlAttributes = new { @class = "form-control", id = "txtAdd7", minlength = "3", maxlength = "30" } })
