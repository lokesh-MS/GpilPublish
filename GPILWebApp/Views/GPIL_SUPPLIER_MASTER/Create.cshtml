        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="sm-3">
                    <label class="control-label">Supplier / Customer Address2</label>
                    @Html.EditorFor(model => model.SUPP_ADDRESS2, new { htmlAttributes = new { @class = "form-control", id = "txtAdd2", minlength = "3", maxlength = "30" } })
