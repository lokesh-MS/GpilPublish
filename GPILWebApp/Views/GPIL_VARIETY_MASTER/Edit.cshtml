@model GPILWebApp.Models.GPIL_VARIETY_MASTER

@{
    ViewBag.Root = "Master";
    ViewBag.Title = "Variety Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; color:#438EB9">Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    @Html.HiddenFor(model => model.VARIETY)
    @Html.HiddenFor(model => model.CREATED_BY)
    @Html.HiddenFor(model => model.CREATED_DATE)


    <div class="row">

        <div class="col-sm-6">
            <div class="sm-3">
                <label class="control-label">Variety Type </label>

                @*@Html.LabelFor(model => model.VARIETY_TYPE, htmlAttributes: new { @class = "control-label col-md-2" })*@
                @Html.EditorFor(model => model.VARIETY_TYPE, new { htmlAttributes = new { @class = "form-control", minlength = "4", maxlength = "4" } })
                @Html.ValidationMessageFor(model => model.VARIETY_TYPE, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-sm-6">
            <div class="sm-3">
                <label class="control-label">Variety Name </label>

                @*@Html.LabelFor(model => model.VARIETY_NAME, htmlAttributes: new { @class = "control-label col-md-2" })*@
                @Html.EditorFor(model => model.VARIETY_NAME, new { htmlAttributes = new { @class = "form-control", minlength = "4", maxlength = "40" } })
                @Html.ValidationMessageFor(model => model.VARIETY_NAME, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>


    <div class="row">

        <div class="col-sm-6">
            <div class="sm-3">
                <label class="control-label">Variety Description </label>

                @*@Html.LabelFor(model => model.VARIETY_DESC, htmlAttributes: new { @class = "control-label col-md-2" })*@
                @Html.EditorFor(model => model.VARIETY_DESC, new { htmlAttributes = new { @class = "form-control", minlength = "4", maxlength = "30" } })
                @Html.ValidationMessageFor(model => model.VARIETY_DESC, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-sm-6">
            <div class="sm-3">
                <label class="control-label">Status </label>

                @*@Html.LabelFor(model => model.STATUS, htmlAttributes: new { @class = "control-label col-md-2" })*@
                @Html.EditorFor(model => model.STATUS, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.STATUS, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>


    <div class="row">

        <div class="col-sm-6">
            <div class="sm-3">
                <label class="control-label"></label>
                <br />
                <input type="submit" value="Save" style="width:95px" class="btn btn-success btn-sm" />

            </div>
        </div>
        <div class="col-sm-6">
            <div class="sm-3">
                <label class="control-label"></label>


            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <p id="notify" style="display:none"> @TempData["SuccessMessage"]</p>

    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script src="~/assets/js/sweetalert.min.js"></script>
<link href="~/assets/css/sweetalert.css" rel="stylesheet" />
<script>
    var mes = document.getElementById("notify").innerHTML
    if (mes.startsWith("Success", 1)) {
        sweetAlert("Done", mes, "success");
        setTimeout(function () {
            window.location = "/GPIL_VARIETY_MASTER/Index";
        },2000)
    }
</script>