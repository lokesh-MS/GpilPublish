                        var j = i + 1;

                      
                        var SHIPMENT_NO = (data[i].SHIPMENT_NO == null) ? "" : data[i].SHIPMENT_NO;
                        gethdnSHIPMENT_NO = SHIPMENT_NO; // this gives textbox value
