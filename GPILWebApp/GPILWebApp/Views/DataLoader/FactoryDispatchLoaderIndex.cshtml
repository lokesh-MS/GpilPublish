                        var AWB_NO = (data[i].AWB_NO == null) ? "" : data[i].AWB_NO;
                        var IS_LP5_NOTE = (data[i].IS_LP5_NOTE == null) ? "" : data[i].IS_LP5_NOTE;
                        var REMARKS = (data[i].REMARKS == null) ? "" : data[i].REMARKS;
