@model IEnumerable<GPILWebApp.ViewModel.DataLoader.ThreshingIssueLoader>

@{
    ViewBag.Root = "Loader";
    ViewBag.Title = "ThreshingIssueLoaderIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="css/custom.css" rel="stylesheet" />
<style type="text/css">
    #loader {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        width: 100%;
        background: rgba(0,0,0,0.75) url('../../Images/Loading.gif') no-repeat center center;
        z-index: 10000;
