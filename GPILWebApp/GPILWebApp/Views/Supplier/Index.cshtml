@model IEnumerable<GPILWebApp.Models.GPIL_SUPPLIER_MASTER>

@{
    ViewBag.Root = "Master";
    ViewBag.Title = "Supplier Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    <button type="button" role="button" onclick="@("window.location.href='" + @Url.Action("Create", "Supplier") + "'");" class="btn btn-success btn-sm" data-toggle="modal" data-target="#modal-form"> Create New Item </button>
</p>

<div class="table-responsive">
    <table id="dynamic-tables" class="table  table-striped table-bordered table-hover table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SNO)
            </th>
            <th>
                Supplier Name
            </th>
            <th>
              Supplier Code
            </th>
            <th>
               Address
            </th>
            <th>
               Mobile No
            </th>
            <th>
               Status
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ATTRIBUTE1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ATTRIBUTE2)
            </th>
            <th>
              Created By
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SNO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SUPP_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GPIL_SUPP_CODE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SUPP_ADDRESS1)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.MOBILE_NO)
            </td>


          
            <td>
                @Html.DisplayFor(modelItem => item.STATUS)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ATTRIBUTE1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ATTRIBUTE2)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.GPIL_USER_MASTER.USER_NAME)
            </td>
           
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = @item.SUPP_CODE + ',' + item.SITE_NAME }) |
                @Html.ActionLink("Details", "Details", new { id = item.SUPP_CODE + ',' + item.SITE_NAME }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SUPP_CODE + ',' + item.SITE_NAME })
            </td>
        </tr>
        }

    </table>
</div>
