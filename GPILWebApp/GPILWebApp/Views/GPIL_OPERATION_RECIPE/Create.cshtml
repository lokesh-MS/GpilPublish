<script>

    function UserIDCheck() {
        var RecipeID = $("#txtRecipeCode").val();
        $.ajax({
            url: '@Url.Action("CheckRecipeAvailability", "GPIL_OPERATION_RECIPE")',
            type: "POST",
            datatype: 'json',
            data: { 'Recipedata': RecipeID },
            success: function (data) {
                if (data != '') {
                    var user = JSON.parse(data);
                    $("#Status").html('<font color="Green"></font>');
                    $("#txtRecipeCode").css("border-color", "Green");
                    $('#txtOperationRecipe').val(user[0].OPERATION_RECIPE);
                    
                    $('#ddlStatus').val(user[0].STATUS);
                   
                    $('#btnSubmit').val("Update");
                }
                if (data == 0) {
                    $("#Status").html('<font color="Green"> Taken !. you can create ID.</font>');
                    $("#txtRecipeCode").css("border-color", "Green");
                    $('#txtOperationRecipe').val('');                 
                    $('#ddlStatus').val('');
                     $('#btnSubmit').val("Create");
                }
            },
            error: function () { alert("Huh? What? What did you need?.") }
        });
    }




</script>