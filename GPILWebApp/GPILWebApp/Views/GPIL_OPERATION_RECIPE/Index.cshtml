@model IEnumerable<GPILWebApp.Models.GPIL_OPERATION_RECIPE>

@{
    ViewBag.Root = "Master";
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; color:#438EB9">Operation Recipe Index</h2>

<p>
    <button type="button" role="button" onclick="@("window.location.href='" + @Url.Action("Create", "GPIL_OPERATION_RECIPE") + "'");" class="btn btn-success btn-sm"> Create New Item </button>
    <button type="button" role="button" onclick="@("window.location.href='" + @Url.Action("ExcelIndex", "GPIL_OPERATION_RECIPE") + "'");" class="btn btn-success btn-sm"> Excel Upload</button>

</p>



<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">Operatiopn Recipe List</h3>
        <div class="clearfix">
            <div class="pull-right tableTools-container"></div>
        </div>
        <div class="table-header">
            Results for "OPERATION RECIPE DETAILS"
        </div>
        <div class="form-horizondal" id="frmdetl">
            <table id="dynamic-tabl" class="table table-striped table-bordered table-hover alert-dark table-condensed">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.SNO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RECIPE_CODE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OPERATION_RECIPE)
                        </th>
                       
                        <th>
                            @Html.DisplayNameFor(model => model.STATUS)
                        </th>
                        
                        <th></th>
                    </tr>

                </thead>

                <tbody id="tbody">

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SNO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RECIPE_CODE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OPERATION_RECIPE)
                            </td>
                            
                            <td>
                                @Html.DisplayFor(modelItem => item.STATUS)
                            </td>
                            
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.RECIPE_CODE }) |
                                @Html.ActionLink("Details", "Details", new { id = item.RECIPE_CODE }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.RECIPE_CODE })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




<script src="~/assets/js/jquery-2.1.4.min.js"></script>





<script>

    $(document).ready(function () {
        $('#dynamic-tabl').dataTable(
           );
    });

</script>