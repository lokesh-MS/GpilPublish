@model IEnumerable<GPILWebApp.Models.GPIL_COMPANY_MASTER>

@{
    ViewBag.Root = "Master";
    ViewBag.Title = "COMPANY LIST";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; color:#438EB9">Company Master</h2>


@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@


<p>

    <button type="button" role="button" onclick="@("window.location.href='" + @Url.Action("Create", "GPIL_COMPANY_MASTER") + "'");" class="btn btn-success btn-sm"> Create New Item </button>
    <button type="button" role="button" onclick="@("window.location.href='" + @Url.Action("ExcelIndex", "GPIL_COMPANY_MASTER") + "'");" class="btn btn-success btn-sm"> Excel Upload</button>
    
</p>





<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">COMPANY LIST</h3>

        <div class="clearfix">
            <div class="pull-right tableTools-container"></div>
        </div>
        <div class="table-header">
            Results for "COMPANY DETAILS"
        </div>


        <div class="form-horizondal" id="frmdetl">
            <table id="dynamic-tabl" class="table table-striped table-bordered table-hover alert-dark table-condensed">
                <thead>



                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.COMPANY_CODE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.COMPANY_NAME)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SUPPLIER_FLAG)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SUPPLIED_TO)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.STATUS)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.COMP_SHORT_NAME)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.COMP_GROUP_CODE)
                        </th>

                        <th>EDIT/UPDATE/DELETE</th>
                    </tr>





                </thead>


                <tbody id="tbody">

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.COMPANY_CODE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.COMPANY_NAME)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SUPPLIER_FLAG)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SUPPLIED_TO)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.STATUS)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.COMP_SHORT_NAME)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.COMP_GROUP_CODE)
                            </td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.COMPANY_CODE }) |
                                @Html.ActionLink("Details", "Details", new { id = item.COMPANY_CODE }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.COMPANY_CODE })
                            </td>
                        </tr>
                    }



                </tbody>
            </table>
        </div>


    </div>
</div>





<script src="~/assets/js/jquery-2.1.4.min.js"></script>





<script>

    $(document).ready(function () {
        $('#dynamic-tabl').dataTable(
           );
    });

</script>