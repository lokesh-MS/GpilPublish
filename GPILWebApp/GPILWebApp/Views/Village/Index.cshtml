@model IEnumerable<GPILWebApp.Models.GPIL_VILLAGE_MASTER>

@{
    ViewBag.Root = "Master";
    ViewBag.Title = "Village List";
    ViewBag.Title = "Village Master Details";
}
<p>
    <button type="button" role="button" onclick="@("window.location.href='" + @Url.Action("Create", "Village") + "'");" class="btn btn-success btn-sm" data-toggle="modal" data-target="#modal-form"> Create New Item </button>
    <button type="button" role="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#modal-form"> Excel Upload </button>
</p>


<table id="dynamic-table" class="table  table-striped table-bordered table-hover table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SNO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VILLAGE_CODE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VILLAGE_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GPIL_CLUSTER_MASTER.CLUSTER_CODE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GPIL_CLUSTER_MASTER.CLUSTER_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.STATUS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CREATED_DATE)
        </th>
       
       
        
       
       
       
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SNO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VILLAGE_CODE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VILLAGE_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GPIL_CLUSTER_MASTER.CLUSTER_CODE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GPIL_CLUSTER_MASTER.CLUSTER_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.STATUS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CREATED_DATE)
        </td>
       
        
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.VILLAGE_CODE }) |
            @Html.ActionLink("Details", "Details", new { id = item.VILLAGE_CODE }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.VILLAGE_CODE })
        </td>
    </tr>
}

</table>
@using (Html.BeginForm("ImportExcelData", "Village", FormMethod.Post, new { @enctype = "multipart/form-data" }))

{

<div id="modal-form" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="blue bigger">Village Creation Excel Upload</h4>
            </div>
            <div class="modal-body">
                <form id="VarietyFrm">
                    <div class="widget-body">
                        <div class="widget-main">
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <input type="file" id="id-input-file-2" name="postedFile" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm" id="btnCancel" data-dismiss="modal">
                    <i class="ace-icon fa fa-times"></i>
                    Cancel
                </button>

                <button class="btn btn-sm btn-primary"   type="submit" id="btnSave">
                    <i class="ace-icon fa fa-check"></i>
                    Upload
                </button>
            </div>
        </div>
    </div>
    
    
    </div>

  
}

<script>
    $(document).ready(function () {
        $('#id-input-file-1, #id-input-file-2').ace_file_input({
            no_file: 'No File ...',
            btn_choose: 'Choose',
            btn_change: 'Change',
            droppable: false,
            onchange: null,
            thumbnail: false, //| true | large
            //whitelist:'gif|png|jpg|jpeg'
            blacklist: 'gif|png|jpg|jpeg'
            //onchange:''
            //
        });
        //pre-show a file name, for example a previously selected file
        //$('#id-input-file-1').ace_file_input('show_file_list', ['myfile.txt'])

    });
</script>
