                    new SelectListItem {Text="FGD" ,Value="FGD" },
                    new SelectListItem {Text="FGE" ,Value="FGE" },
                    new SelectListItem {Text="FW" ,Value="FW" },
                    new SelectListItem {Text="GRD" ,Value="GRD" },
