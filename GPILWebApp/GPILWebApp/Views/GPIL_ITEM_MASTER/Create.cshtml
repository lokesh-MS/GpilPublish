<script>

    function UserIDCheck() {
        var ItemID = $("#txtItemCode").val();
        $.ajax({
            url: '@Url.Action("CheckItemAvailability", "GPIL_ITEM_MASTER")',
            type: "POST",
            datatype: 'json',
            data: { 'Itemdata': ItemID },
            success: function (data) {
                if (data != '') {
                    var user = JSON.parse(data);
                    $("#Status").html('<font color="Green"></font>');
                    $("#txtItemCode").css("border-color", "Green");
                    //$('#txtUserCode').val(user.EMP_ID);
                    $('#txtItemCodeGroup').val(user[0].ITEM_CODE_GROUP);
                    $('#ddlItemGroup').val(user[0].ITEM_GROUP);
                    $('#txtItemType').val(user[0].ITEM_TYPE);
                    $('#txtItemDescription').val(user[0].ITEM_DESC);
                    $('#ddlCrop').val(user[0].CROP);
                    $('#ddlVariety').val(user[0].VARIETY);
                    $('#txtCostCategory').val(user[0].COST_CATEGORY);
                    $('#ddlOrgnType').val(user[0].ORGN_TYPE);
                    $('#ddlStatus').val(user[0].STATUS);
                    $('#ddlSubInventory').val(user[0].ATTRIBUTE2);
                    $('#ddlBMGLGrade').val(user[0].ATTRIBUTE3);
                    $('#txtHsnCode').val(user[0].ATTRIBUTE4);
                    $('#btnSubmit').val("Update");
                }
                if (data == 0) {
                    $("#Status").html('<font color="Green"> Taken !. you can create ID.</font>');
                    $("#txtItemCode").css("border-color", "Green");
                    $('#txtItemCodeGroup').val('');
                    $('#ddlItemGroup').val('');
                    $('#txtItemType').val('');
                    $('#txtItemDescription').val('');
                    $('#ddlCrop').val('');
                    $('#ddlVariety').val('');
                    $('#txtCostCategory').val('');
                    $('#ddlOrgnType').val('');
                    $('#ddlStatus').val('');
                    $('#ddlSubInventory').val('');
                    $('#ddlBMGLGrade').val('');
                    $('#txtHsnCode').val('');
                    $('#btnSubmit').val("Create");
                }
            },
            error: function () { alert("Huh? What? What did you need?.") }
        });
    }

