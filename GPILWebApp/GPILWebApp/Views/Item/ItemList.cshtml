@*@model IEnumerable<GPILWebApp.Models.GPIL_ITEM_MASTER>*@

@{
    ViewBag.Root = "Master";
    ViewBag.Title = "ItemList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    @Html.ActionLink("Create New", "Index")
</p>

<p>
    <button type="button" role="button" onclick="@("window.location.href='" + @Url.Action("Index", "Item") + "'");" class="btn btn-success btn-sm"> Create New Item </button>
    <button type="button" role="button" onclick="@("window.location.href='" + @Url.Action("ExcelIndex", "Item") + "'");" class="btn btn-success btn-sm"> Excel Upload</button>
    @*<button type="button" role="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#modal-form"> Excel Upload </button>*@
</p>


<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">Item List</h3>

        <div class="clearfix">
            <div class="pull-right tableTools-container"></div>
        </div>
        <div class="table-header">
            Results for "Latest Registered Domains"
        </div>

        <!-- div.table-responsive -->
        <!-- div.dataTables_borderWrap -->
        <div class="table-responsive">
            <table id="dynamic-table" class="table  table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>

                        <th>SNO</th>
                        <th>ITEM_CODE</th>
                        <th>ITEM_CODE_GROUP</th>
                        <th class="hidden-480">ITEM_GROUP</th>

                        <th>
                            <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                            ITEM_TYPE
                        </th>
                        <th class="hidden-480">ITEM_DESC</th>
                        <th>CROP</th>
                        <th>VARIETY</th>


                        <th class="hidden-480">COST_CATEGORY</th>
                        <th>ORGN_TYPE</th>
                        <th>STATUS</th>
                        <th>ATTRIBUTE1</th>
                        <th>ATTRIBUTE3</th>
                        <th> </th>
                    </tr>
                </thead>

                <tbody id="tbody">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.SNO
                                </td>
                                <td>@item.ITEM_CODE</td>
                                <td>@item.ITEM_CODE_GROUP</td>
                                <td class="hidden-480">@item.ITEM_GROUP</td>
                                <td>@item.ITEM_TYPE</td>

                                <td class="hidden-480">
                                    @item.ITEM_DESC
                                </td>
                                <td class="hidden-480">
                                    @item.CROP
                                </td>
                                <td class="hidden-480">
                                    @item.VARIETY
                                </td>
                                <td class="hidden-480">
                                    @item.COST_CATEGORY
                                </td>
                                <td class="hidden-480">
                                    @item.ORGN_TYPE
                                </td>
                                <td class="hidden-480">
                                    @item.STATUS
                                </td>
                                <td class="hidden-480">
                                    @item.ATTRIBUTE1
                                </td>
                                <td class="hidden-480">
                                    @item.ATTRIBUTE2
                                </td>

                                <td>
                                    <div class="hidden-sm hidden-xs action-buttons">
                                        <a class="blue" href="#">
                                            <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                        </a>

                                        <a class="green" href="#">
                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                        </a>

                                        <a class="red" href="#">
                                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                        </a>
                                    </div>

                                    <div class="hidden-md hidden-lg">
                                        <div class="inline pos-rel">
                                            <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                            </button>

                                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                <li>
                                                    <a href="#" class="tooltip-info" data-rel="tooltip" title="View">
                                                        <span class="blue">
                                                            <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                        </span>
                                                    </a>
                                                </li>

                                                <li>
                                                    <a href="#" class="tooltip-success" data-rel="tooltip" title="Edit">
                                                        <span class="green">
                                                            <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                        </span>
                                                    </a>
                                                </li>

                                                <li>
                                                    <a href="#" class="tooltip-error" data-rel="tooltip" title="Delete">
                                                        <span class="red">
                                                            <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                        </span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
